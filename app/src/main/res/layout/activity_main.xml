<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">// 완료

    <androidx.appcompat.widget.AppCompatImageView

        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:src="@drawable/jungang_layout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="중앙고1"
        app:layout_constraintStart_toStartOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="중앙고2"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="중앙고3"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_n"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="게시판"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="193dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_f"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="급식"
        app:layout_constraintEnd_toEndOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_1" />


</androidx.constraintlayout.widget.ConstraintLayout>












